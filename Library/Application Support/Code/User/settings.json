{
  // disable unknown word hints
  "cSpell.diagnosticLevel": "Hint",

  //use iterm terminalÂ¡
  "terminal.external.osxExec": "iTerm.app",
  "terminal.explorerKind": "external",
  // git
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // cloudformation
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "git.autofetch": true,
  "workbench.iconTheme": "material-icon-theme",
  // Enable autocompletion for required fields when completing Terraform blocks. Combine with `editor.suggest.preview` and the editor will provide inline snippet suggestions for blocks of code
  "terraform.experimentalFeatures.prefillRequiredFields": true,
  // Enable validating the currently open file on save
  "terraform.experimentalFeatures.validateOnSave": true,
  "workbench.colorTheme": "Tokyo Night Storm",
  "editor.formatOnSave": true,
  // "files.autoSave": "afterDelay",

  // cursor color
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#f7768e", // light blue
    "terminalCursor.foreground": "#ffffff" // white
  },

  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "editor.wordWrap": "on",
  // "workbench.sideBar.location": "right"
  "workbench.panel.opensMaximized": "always",
  "terminal.integrated.fontFamily": "MesloLGS NF",

  // always maximise the terminal panel and put it on the right
  "window.zoomLevel": 1,

  "go.toolsManagement.autoUpdate": true,
  "workbench.panel.defaultLocation": "right",

  // go
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  //python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "diffEditor.hideUnchangedRegions.enabled": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

}
